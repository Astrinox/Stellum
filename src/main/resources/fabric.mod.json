{
    "schemaVersion": 1,
    "id": "stellum",
    "version": "${version}",
    "name": "Stellum",
    "description": "A general-purpose library for our mods.",
    "custom": {
        "modmenu": {
            "badges": ["library"],
            "update_checker": false
        }
    },
    "authors": ["Me!"],
    "contact": {
        "homepage": "https://modrinth.com/mod/stellum",
        "sources": "https://github.com/astrinox/stellum"
    },
    "license": "GNU GPL v3",
    "icon": "assets/stellum/icon.png",
    "environment": "*",
    "entrypoints": {
        "main": ["astrinox.stellum.Stellum"],
        "fabric-datagen": ["astrinox.stellum.StellumDataGenerator"]
    },
    "mixins": [
        "stellum.mixins.json",
        {
            "config": "stellum.client.mixins.json",
            "environment": "client"
        }
    ],
    "depends": {
        "fabricloader": ">=0.16.9",
        "minecraft": "~1.21",
        "java": ">=21",
        "fabric-api": "*"
    }
}
